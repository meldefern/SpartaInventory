<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Log id</th>
          <th>Lender</th>
          <th>Borrower</th>
          <th>Item</th>
          <th>Date Taken</th>
          <th>Due Date</th>
          <th>Returned By</th>
          <th>Date Returned</th>
        </tr>
        </thead>

        <tbody>
          <tr>
           <td><%= @log.id %></td>
           <!-- try finds the User names associated to the log, blank if null -->
           <td><%= @log.try(:lender).try(:name) %></td>
           <td><%= @log.try(:borrower).try(:name) %></td>
           <td><%= @log.item.description %></td>
           <td><%= @log.created_at.in_time_zone('London').strftime('%a, %d %b %Y %H:%M:%S')  %></td>
           <td><%=@log.try(:due_date)%></td>
           <td><%= @log.returned_to.try(:name) %></td>
           <td><%= @log.return_date %></td>
          </tr>
        </tbody>
      </table>

      <a class="btn btn-success largeBtn" href="<%= logs_path %>" role="button">Back to logs</a>
    </div>
  </div>
</div>



  




